</script>
{{#contains 'Page Not Found' @root.page.title}}
<!-- Report the 404 event -->
<script>
  var url = document.referrer
  if (url == '') { url = 'No referrer' }
  ga('send', 'event', '404', url /* page as action */)
</script>
{{/contains}}
<!-- End Google Analytics -->
